page {
  background-color: #dedede;
}
.search-row {
  overflow: hidden;
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  padding: 20rpx;
}
.search-row input {
  flex: 4;
  height: 100%;
  padding-left: 30rpx;
  margin-right: 20rpx;
  background-color: #fff;
}
.search-row button {
  flex: 1;
  height: 60rpx;
  padding: 0;
  font-size: 28rpx;
  font-weight: 400;
  text-align: center;
  line-height: 60rpx;
}
.search-content {
  overflow: hidden;
  padding: 20rpx;
}
.search-content .search-item {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 80rpx;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
