.content {
  background-color: #f3f4f6;
  padding: 0 0 80rpx 0;
}
.content .header-bar {
  padding: 20rpx;
  border-top: 2rpx solid #eee;
}
.content .header-bar button {
  margin: 0 10rpx;
  font-weight: 400;
  background-color: #fff;
}
.content .header-bar .active {
  color: var(--themeColor);
  border: 1rpx solid currentColor;
}
.content .goods-group .goods-item {
  display: flex;
  background-color: #fff;
  margin: 0 10rpx 10rpx 10rpx;
}
.content .goods-group .goods-item .goods-image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .goods-group .goods-item .goods-image image {
  width: 80%;
}
.content .goods-group .goods-item .goods-content {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.content .goods-group .goods-item .goods-content .goods-text {
  display: -webkit-box;
  overfLow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.content .goods-group .goods-item .goods-content .goods-price {
  color: var(--themeColor);
  font-size: 30rpx;
}
